<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapFragment">

    <!-- Map Fragment: PUT BACK IN -->
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <!-- Input box to search for study spot -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:hint="Find a study spot"
        android:inputType="textNoSuggestions" />

    <TextView
        android:id="@+id/mapText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="180dp"
        android:layout_marginTop="200dp"
        android:text="Map of campus" />

    <!-- Button to open up list of study spots -->
    <Button
        android:id="@+id/listButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:drawableBottom="@drawable/ic_baseline_format_list_bulleted_24">
    </Button>

    <!-- Button to look through study spots for search term -->
    <Button
        android:id="@+id/searchButton"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="8dp"
        android:text="Search"
        android:textSize="8dp"></Button>

</FrameLayout>